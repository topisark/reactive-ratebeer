{
  "extends": "airbnb",
  "plugins": ["jest"],
  "rules": {
    "import/prefer-default-export": "off",
    "function-paren-newline": "off",
    "arrow-parens": "off",
    "padded-blocks": "off",
    "max-len": ["error", { "code": 120 }],
    "comma-dangle": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "eol-last": "off",
    "react/prop-types": "off",
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "globals": {
    "document": true
  }
}